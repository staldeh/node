//- Navbar mixins
mixin nav(name, id, style)
    - var style = (typeof style === 'undefined') ? "default" : style
    nav( role="navigation", class=["navbar", "navbar-" + style, "bg-light","navbar-expand-md"] )
        .navbar-header
            button.navbar-toggler.collapsed( type="button", data-toggle="collapse", data-target="#" + id, aria-expanded="false", aria-controls="navbar")
                span.sr-only Toggle navigation
                span.icon-bar
                span.icon-bar
                span.icon-bar
            a.navbar-brand(href="#")= name
 
        .collapse.navbar-collapse( id=id )
            ul.nav.navbar-nav
                block
 
mixin nav_item(href, active)
    li(class=["nav-item",active]): a.nav-link( href=href )
        block
 
mixin nav_item_dropdown(href, active)
    li(class=["dropdown","nav-item", active])
        a.dropdown-toggle.nav-link( href=href, data-toggle="dropdown", role="button", aria-expanded="false" )= attributes.label
            span.caret
        ul.dropdown-menu( role="menu" )
            block
 
mixin nav_divider
    li.divider.dropdown-item
 
mixin nav_header
    li.dropdown-header.dropdown-item
        block
 
//- End navbar mixins

//- Panel mixin
mixin panel(heading, style)
    - var style = (typeof style === 'undefined') ? "default" : style
    div( class=["card", "bg-" + style] )
        .card-heading= heading
        .card-body
            block

//- Button mixin
mixin button(style, href, size)
   - var style = (typeof style === 'undefined') ? "default" : style
   - var href = (typeof href === 'undefined') ? "#" : href
   case size
      when "large"
         - size = "btn-lg"
      when "small"
         - size = "btn-sm"
      when "mini"
         - size = "btn-xs" 

   a( class=["btn", "btn-" + style, size], href=href )
      block   

